{
  "manifest_version": 3,
  "name": "Weather Widget",
  "version": "1.0",
  "permissions": ["geolocation"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/cloudy-icon-16.png",
      "48": "icons/cloudy-icon-48.png",
      "128": "icons/cloudy-icon-128.png"
    }
  },
  "icons": {
    "16": "icons/cloudy-icon-16.png",
    "48": "icons/cloudy-icon-48.png",
    "128": "icons/cloudy-icon-128.png"
  },
  "host_permissions": [
    "https://api.weatherapi.com/*"
  ]
}
