{
  "manifest_version": 3,
  "name": "Weather Extension",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/cloudy-icon-16.png",
      "48": "icons/cloudy-icon-48.png",
      "128": "icons/cloudy-icon-128.png"
    }
  },
  "permissions": ["activeTab"],
  "host_permissions": ["http://api.weatherapi.com/"],
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ]}]
}
